# Backend (production)
DATABASE_URL=postgresql+asyncpg://kcardswap:kcardswap@db:5432/kcardswap
TEST_DATABASE_URL=postgresql+asyncpg://kcardswap:kcardswap@db:5432/kcardswap_test
GCS_BUCKET_NAME=
USE_MOCK_GCS=false
GCS_CREDENTIALS_PATH=
RUN_GCS_SMOKE=false

# JWT Configuration
JWT_SECRET_KEY=change-me-to-a-secure-random-string-min-32-chars

# FastAPI
PORT=8000
ENVIRONMENT=production
DEBUG=false
SQL_ECHO=false

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://leonardtechsolutions.com/projects/kcardswap

# Admin Initialization
INIT_DEFAULT_ADMIN=false
DEFAULT_ADMIN_EMAIL=
DEFAULT_ADMIN_PASSWORD=
DEFAULT_ADMIN_ROLE=admin

# CORS Origins (comma-separated)
CORS_ORIGINS=https://leonardtechsolutions.com

# Cookie-JWT Settings (for Web authentication)
ACCESS_COOKIE_NAME=access_token
REFRESH_COOKIE_NAME=refresh_token
COOKIE_SAMESITE=lax
COOKIE_SECURE=true
COOKIE_DOMAIN=leonardtechsolutions.com
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Web (Next.js)
NEXT_PUBLIC_API_URL=https://leonardtechsolutions.com/projects/kcardswap/api
NEXT_PUBLIC_GOOGLE_CLIENT_ID=
