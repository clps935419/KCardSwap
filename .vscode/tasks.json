{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend: dev (uvicorn)",
      "type": "shell",
      "command": "poetry run uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
      "options": {
        "cwd": "${workspaceFolder}/apps/backend"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "docker: up (compose)",
      "type": "shell",
      "command": "docker compose up -d",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "mobile: start (expo)",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/apps/mobile"
      },
      "problemMatcher": [],
      "group": "build"
    }
  ]
}
