# KCardSwap Backend Environment Variables

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kcardswap

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production-use-at-least-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth Configuration (Phase 3 - US1)
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id-from-cloud-console
GOOGLE_CLIENT_SECRET=your-google-client-secret-from-cloud-console
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Google Cloud Storage (GCS) Configuration (Phase 4 - US2)
GCS_BUCKET_NAME=kcardswap
GCS_CREDENTIALS_PATH=/path/to/service-account-key.json
# Use mock GCS for development/testing (true) or real GCS (false)
# Default: true for development, false for production
USE_MOCK_GCS=true
# Enable GCS smoke tests with real GCS (only for staging/nightly CI)
# Default: false (smoke tests skipped)
RUN_GCS_SMOKE=false

# File Upload Limits (Phase 4 - US2)
MAX_FILE_SIZE_MB=10
DAILY_UPLOAD_LIMIT_FREE=2
TOTAL_STORAGE_GB_FREE=1

# API Configuration
API_VERSION=v1
ENVIRONMENT=development
DEBUG=false
SQL_ECHO=false

# CORS Configuration
# Development: Allow localhost ports for web and mobile
# Production: Set to your actual frontend domain(s), DO NOT use * with credentials
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:19006

# Cookie-JWT Settings (HttpOnly Cookie Authentication)
# Cookie names for access and refresh tokens
ACCESS_COOKIE_NAME=access_token
REFRESH_COOKIE_NAME=refresh_token

# Cookie security settings
# SameSite: "lax" (recommended), "strict", or "none" (requires Secure=true)
COOKIE_SAMESITE=lax
# Secure: true for HTTPS in production, false for HTTP in development
COOKIE_SECURE=false
# Domain: Leave empty for same-origin, or set to your domain (e.g., .kcardswap.com)
# Use leading dot for subdomains: .example.com
COOKIE_DOMAIN=
# Path: Root path for cookies (typically "/")
COOKIE_PATH=/

# Search Configuration (Phase 5 - US3)
DAILY_SEARCH_LIMIT_FREE=5
SEARCH_RADIUS_KM=10

# Subscription Configuration (Phase 8 - US6)
GOOGLE_PLAY_PACKAGE_NAME=com.kcardswap.app
GOOGLE_PLAY_SERVICE_ACCOUNT_KEY=/path/to/play-service-account-key.json

# Trade Configuration (Phase 7 - US5)
TRADE_CONFIRMATION_TIMEOUT_HOURS=48
